#include "API_debounce.h"
#include "API_delay.h"
#include "main.h"
#include "stm32f4xx_hal.h"

void SystemClock_Config(void);
static void MX_GPIO_Init(void);
HAL_Init();

void debounceFSM_update(){
	debounceState_t status_button_provitional;
	control_t control_MEF;
	debounceFSM_init();
	control_MEF=0;
	status_button_provitional=buttonUp;

	while (0==control_MEF){
		switch (status_button_provitional){

		case buttonUp:
				if(RESET==HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_13)){
					HAL_GPIO_WritePin(GPIO5, GPIO_PIN_5, SET);
				}
				else {
					HAL_GPIO_WritePin(GPIO5, GPIO_PIN_5, RESET);
				}

			break;

		case buttonDown:
			break;

		case buttonFalling:
			break;

		case buttonRising:
			break;

		default:
			status_button_provitional=buttonUp;
		}


	}
}

void debounceFSM_init(){

};

void readKey(){

};





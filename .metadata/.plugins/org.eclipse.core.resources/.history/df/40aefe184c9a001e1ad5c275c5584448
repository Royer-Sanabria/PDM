static enum Estado FlagMEF=Inicio;
static mensaje[];
static uint8_t Set_Altura;
extern UART_HandleTypeDef huart2;
extern I2C_HandleTypeDef hi2c1;


void MEF(){

	switch (FlagMEF){

	case Inicio:
mensaje[]="Indique la altura de seteo: \r\n";
UART_TrasmitMessage(mensajeAlturaSeteo);
FlagMEF=Altura_Seteo;
break;

	case Altura_Seteo:
		UARTRead_t AlturaSeteo=UART_Read();
		if(AlturaSeteo.estado){
			Set_Altura=AlturaSeteo.dato;
		    BMP_280_ConfigP0(hi2c1);
		    Char
		}
		break;


	default:
	FlagMEF=Inicio;
	}
}

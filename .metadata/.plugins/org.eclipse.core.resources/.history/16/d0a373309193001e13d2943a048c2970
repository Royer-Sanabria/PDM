typedef bool bool_t;
enum  Flag_Program{
	 read_set_temperature,
	 read_confirmation_set_temperature,
	 write_message_temperature,
	 write_message_confirmation
};


typedef struct{
	bool_t estado;
	uint16_t dato;
}UARTRead_t;



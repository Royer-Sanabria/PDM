#include "API_debounce.h"
#include "API_delay.h"
#include "main.h"

void SystemClock_Config(void);
static void MX_GPIO_Init(void);

void debounceFSM_update(){
	debounceState_t status_button_provitional;
	control_t control_MEF;
	debounceFSM_init();
	control_MEF=0;

	while (0==control_MEF){
		switch (status_button_provitional){

		case buttonUp:
			HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_13);
				if(RESET==GPIO_ReadPin(GPIOC, GPIO_PIN_13)){
					HAL_GPIO_TogglePin(GPIOA, GPIO_PIN_5);
				}

			break;

		case buttonDown:
			break;

		case buttonFalling:
			break;

		case buttonRising:
			break;

		default:
			status_button_provitional=buttonUp;
		}


	}
}

void debounceFSM_init(){

};

void readKey(){

};

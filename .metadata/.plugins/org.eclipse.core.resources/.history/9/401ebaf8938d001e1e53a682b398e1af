#include "API_debounce.h"
#include "API_delay.h"
#define delay_control 40;
static debounceState_t status_button;
static delay_t Retardo;

void debounceFSM_init(void){
	delayInit(&Retardo,delay_control);
	status_button=buttonUp;
}

void debounceFSM_update(){

	switch (status_button){
		case buttonUp:
			if(RESET==HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_13)){

				if(delayRead(&Retardo)){
					if(RESET==HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_13)){
						HAL_GPIO_TogglePin(GPIOA, GPIO_PIN_5);
										HAL_Delay(100);

					}
				}



			}
			else{
				HAL_GPIO_WritePin(GPIOA, GPIO_PIN_5, SET);
			}
		break;

		default:

	}
}


void buttonPressed();
void buttonReleased();

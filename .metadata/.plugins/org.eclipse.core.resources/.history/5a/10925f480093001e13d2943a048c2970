#include "main.h"
#include "API_UART.h"
#include <stdlib.h>
#include <string.h>

#define TIME_MAX_DELAY 10
#define BUFFER_SIZE 3

UART_HandleTypeDef huart2;


char interlineado[]={"\r\n"};
uint8_t rx_buffer[BUFFER_SIZE];
volatile uint8_t rx_data_ready = 0;
 uint16_t UART_Date;

 static enum  Flag_Program{
	 lectura_set_temperatura,
	 confirmaci贸n_set_temperatura
 };

// ******************************************
void UART_Init(void){
MX_USART2_UART_Init();
HAL_UART_Receive_IT(&huart2, (uint8_t *)rx_buffer, BUFFER_SIZE);
}
/*

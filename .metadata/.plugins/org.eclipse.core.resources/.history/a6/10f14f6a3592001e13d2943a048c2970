#include "main.h"
#include "API_UART.h"
#include <stdlib.h>
#include <string.h>
#define TIME_MAX_WAIT 5000
#define SIZE_TEMPERATURE 3

	UART_HandleTypeDef huart2;
	static void MX_USART2_UART_Init(void);


static uint8_t Flag;
static uint8_t temperature,time;
static recipe_t recipe;
volatile uint8_t rx_data_ready;

// ******************************************
void UART_Init(void){
MX_USART2_UART_Init();
Flag=0;
}
/*
 Función ue inicializa la UART.
*/
//*******************************************



uint8_t UART_receiveTemperature(){



	char recipeTemperatura[SIZE_TEMPERATURE];
	char mensaje_solicitud_temperatura[]={"Indique la temperatura cocción \r\n"};
	HAL_UART_Transmit(&huart2,(uint8_t *)mensaje_solicitud_temperatura, strlen(mensaje_solicitud_temperatura), HAL_MAX_DELAY);
	HAL_UART_Receive(&huart2,(uint8_t *)recipeTemperatura,SIZE_TEMPERATURE, HAL_MAX_DELAY);
	HAL_UART_Transmit(&huart2,(uint8_t *)recipeTemperatura,SIZE_TEMPERATURE, HAL_MAX_DELAY);
	temperature=atoi(recipeTemperatura);

return temperature;
}


uint8_t UART_receiveTime(){
	char recipeTiempo[SIZE_TEMPERATURE];
	char mensaje_solicitud_tiempo[]={"Indique el tiempo de cocción \r\n"};
	HAL_UART_Transmit(&huart2,(uint8_t *)mensaje_solicitud_tiempo, strlen(mensaje_solicitud_tiempo), HAL_MAX_DELAY);
	HAL_UART_Receive(&huart2,(uint8_t *)recipeTiempo,SIZE_TEMPERATURE, HAL_MAX_DELAY);
	HAL_UART_Transmit(&huart2,(uint8_t *)recipeTiempo,SIZE_TEMPERATURE, HAL_MAX_DELAY);
	time=atoi(recipeTiempo);
return time;
}








void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart) {
    rx_data_ready = 1;
}


static void MX_USART2_UART_Init(void)
{
  huart2.Instance = USART2;
  huart2.Init.BaudRate = 115200;
  huart2.Init.WordLength = UART_WORDLENGTH_8B;
  huart2.Init.StopBits = UART_STOPBITS_1;
  huart2.Init.Parity = UART_PARITY_NONE;
  huart2.Init.Mode = UART_MODE_TX_RX;
  huart2.Init.HwFlowCtl = UART_HWCONTROL_NONE;
  huart2.Init.OverSampling = UART_OVERSAMPLING_16;
  if (HAL_UART_Init(&huart2) != HAL_OK)
  {
    Error_Handler();
  }
}

#include "main.h"
#include "BMP280_Funtion.h"
#include "API_Delay.h"
static uint8_t Data[256];
void UART_Trasmit(UART_HandleTypeDef huart2, ReadSensor Dato){

	sprintf((char *)Data,"Presion: %.2f Pa, Temperatura: %.2f, Altura: %.2f \r\n",Dato.Presion, Dato.Temperatura, Dato.altura);
		  		HAL_UART_Transmit(huart2, Data, strlen (Data), 1000);
		  		HAL_Delay(5000);
}

